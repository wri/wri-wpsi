.mb-4 = form_for [:admin, @event] do |f|
  = render 'admin/shared/error_messages', resource: @event

  .form-group
    .field
      = f.label :title
      = f.text_field :title, class: 'form-control'
  .form-group
    .field
      = f.label :start
      = f.datetime_field :start, class: 'form-control'
  .form-group
    .field
      = f.label :ends
      = f.datetime_field :ends, class: 'form-control'
  .form-group
    .field
      = f.label :location
      = f.text_field :location, class: 'form-control'
  .actions = f.submit class: 'btn btn-primary'
